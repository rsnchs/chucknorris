<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
        <TextView
            android:id="@+id/tv_joke_content_joke"
            android:layout_width="@dimen/no_dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/space_15dp"
            android:minHeight="@dimen/space_20dp"
            tools:text="@tools:sample/lorem/random"
            tools:maxLines="3"
            style="@style/Text.Centered.SecondaryColor"
            />

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/sl_joke_content_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_joke_content_joke"
            app:shimmer_auto_start="false"
            android:visibility="gone"
            >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            style="@style/Button.IconOnly.HighLightOnClick"
            />
        </com.facebook.shimmer.ShimmerFrameLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_joke_content_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_joke_content_joke"
            style="@style/Button.IconOnly.Favorite"
            app:icon="@drawable/favorite_selector"
            />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/ba_joke_content_favorite_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="start"
            app:constraint_referenced_ids="bt_joke_content_favorite,sl_joke_content_favorite"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_joke_content_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/ba_joke_content_favorite_limit"
            app:layout_constraintTop_toBottomOf="@id/tv_joke_content_joke"
            style="@style/Button.IconOnly.HighLightOnClick"
            app:icon="@drawable/ic_share"
            />
</androidx.constraintlayout.widget.ConstraintLayout>
